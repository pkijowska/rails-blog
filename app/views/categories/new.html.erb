<h1 class="text-center mt-4">Create a new category </h1>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <% if @category.errors.any? %>
        <h2>The following errors prevented the <%= @category.class.name.downcase %> from being saved</h2>
          <% @category.errors.full_messages.each do |msg|%>
          <ul>
            <li><%= msg %></li>
          <% end %>
        </ul>
        <% end %>

        <%= form_with(model: @category, class: 'shadow p-3 mb-3 bg-info rounded', local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :name, "Category name", class: 'col-2 col-form-label text-light' %>
          <div class="col-10">
            <%= f.text_field :name, class: 'form-control shadow rounded', placeholder: 'Enter a name' %>
          </div>
        </div>
        <div class="form-group row justify-content-center">
          <div class="col-10">
            <%= f.submit class:'btn btn-outline-light btn-lg' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
