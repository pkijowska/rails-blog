<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <% if @user.errors.any? %>
        <h2>The following errors prevented the <%= @user.class.name.downcase %> from being saved</h2>
          <% @user.errors.full_messages.each do |msg|%>
          <ul>
            <li><%= msg %></li>
          <% end %>
        </ul>
        <% end %>

        <%= form_with(model: @user, class: 'shadow p-3 mb-3 bg-info rounded', local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :username, class: 'col-2 col-form-label text-light' %>
          <div class="col-10">
            <%= f.text_field :username, class: 'form-control shadow rounded', placeholder: 'Enter a username' %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :email, class: 'col-2 col-form-label text-light'%>
          <br/>
          <div class="col-10">
            <%= f.email_field :email, class: 'form-control shadow', placeholder: 'Enter your email address' %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :password, class: 'col-2 col-form-label text-light'%>
          <br/>
          <div class="col-10">
            <%= f.password_field :password, class: 'form-control shadow', placeholder: 'Choose a password' %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <div class="col-10">
            <%= f.submit 'Sign up', class:'btn btn-outline-light btn-lg ' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
