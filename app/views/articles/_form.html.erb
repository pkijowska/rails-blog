<h1>Edit article</h1>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <% if @article.errors.any? %>
      <h2>The following errors prevented the article from being saved</h2>
        <% @article.errors.full_messages.each do |msg|%>
        <ul>
          <li><%= msg %></li>
        <% end %>
      </ul>
      <% end %>
      <%= form_with(model: @article, local: true, class: 'shadow p-3 mb-3 bg-info rounded') do |f| %>
      <div class="form-group row">
        <p><%= f.label :title, class: 'col-2 col-form-label text-light' %>
        <div class="col-10">
          <%= f.text_field :title, class: 'form-control shadow rounded' %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :description %>
        <br/>
        <div class="col-10">
          <%= f.text_area :description %>
        </div>
      </div>
      <div class="form-group row justify-content-center">
        <div class="col-10">
          <%= f.submit class:'btn btn-outline-light btn-lg ' %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
<%= link_to 'cancel and return to articles listing', articles_path%> |
